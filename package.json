{
  "name": "tinygen",
  "displayName": "TinyGen - The Open Source AI-Powered Browser Code Editor",
  "version": "0.0.1",
  "description": "Speed up your development by integrating AI the correct way ðŸš€\n\nAfraid of switching editors? No need, TinyGen is integrated right into your browser so you'll feel right at home",
  "author": "Rami <rami.rami@ucalgary.ca> (rami-maalouf.tech)",
  "license": "MIT",
  "homepage_url": "https://tiny-gen.vercel.app",
  "contributors": [
    "Rami <rami.rami@ucalgary.ca> (rami-maalouf.tech)"
  ],
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 3000",
    "dev:fastapi": "source .venv/bin/activate && cd api && uvicorn index:app --reload && cd ..",
    "dev-backend": "run-p dev:fastapi dev:next",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "package": "run-p package:*",
    "package:plasmo": "plasmo package"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@plasmohq/storage": "^1.12.0",
    "@tailwindcss/typography": "^0.5.15",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^10.18.0",
    "get-youtube-chapters": "^2.0.0",
    "next": "^13.5.7",
    "next-themes": "^0.2.1",
    "plasmo": "^0.89.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-syntax-highlighter": "^15.5.0",
    "tailwind-merge": "^1.14.0",
    "webextension-polyfill-global": "0.10.1-1",
    "youtube-caption-extractor": "^1.4.3",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.3",
    "@tailwindcss/forms": "^0.5.9",
    "@types/chrome": "^0.0.237",
    "@types/node": "^20.16.11",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/webextension-polyfill": "^0.10.7",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.47",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs",
      "scripting"
    ],
    "browser_specific_settings": {
      "gecko": {
        "id": "tinygen@ramimaalouf.tech"
      }
    },
    "host_permissions": [
      "https://github.com/*"
    ]
  }
}